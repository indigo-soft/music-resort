{
    "name": "indigo-soft/music-resort",
    "type": "project",
    "description": "Console commands for automatically sorting music files (mp3, flac, m4a) by artists in separate folders and deduplicating audio.",
    "keywords": [
        "music-resort",
        "music-deduplicate",
        "music-sort"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MusicResort\\": "src/"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "symfony/console": "^7.0",
        "symfony/finder": "^7.0",
        "symfony/filesystem": "^7.0",
        "james-heinrich/getid3": "^1.9",
        "symfony/string": "^7.3",
        "symfony/translation-contracts": "^3.6"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "symfony/var-dumper": "^7.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
